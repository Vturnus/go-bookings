{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>The Matrix has you.</h1>
                <p>{{index .StringMap "test"}}</p>
                <p>
                    {{if ne (index .StringMap "remote_ip") ""}}
                        We know who you are... {{index .StringMap "remote_ip"}}
                    {{else}}
                        We will find you at <a href="/">here</a>
                    {{end}}
                </p>
            </div>
        </div>
    </div>
{{end}}